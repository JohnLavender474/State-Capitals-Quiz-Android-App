        </activity>

        <activity
            android:name=".frontend.activities.QuizActivity"
            android:label="@string/title_activity_game" />

        <activity
            android:name=".frontend.activities.ScoreActivity"
            android:label="@string/title_activity_score" />

        <activity
            android:name=".frontend.activities.SelectQuizActivity"
